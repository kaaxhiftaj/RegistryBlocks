<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backimg"
    tools:context="com.techease.registryblocks.Activities.Fragments.ForgotPassFragment">

<ImageView
    android:layout_width="80sp"
    android:layout_height="80sp"
    android:layout_gravity="center"
    android:layout_marginTop="20sp"
    android:src="@drawable/shinelogo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:textColor="@color/colorDim"
        android:textSize="25sp"
        android:layout_marginTop="10sp"
        android:layout_gravity="center"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/colorDark"
        android:layout_marginTop="100sp"
        android:layout_marginLeft="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0sp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginLeft="20sp"
            android:textSize="17sp"
            android:textColor="#fff" />
        <EditText
            android:id="@+id/etEmailForgot"
            android:layout_width="0sp"
            android:layout_weight="0.7"
            android:layout_height="40sp"
            android:hint="Required"
            android:inputType="textEmailAddress"
            android:textColor="#BDBDBD"
            android:background="@null"
            android:textColorHint="@color/colorDark"
            android:paddingLeft="20sp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginTop="5sp"
        android:background="@color/colorDark"
        android:layout_marginLeft="20sp"/>
    <Button
        android:id="@+id/btnSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        android:background="@drawable/round_btn"
        android:layout_marginTop="20sp"
        android:text="Send"
        android:textColor="#fff"
        android:layout_marginBottom="65sp"/>
</LinearLayout>
