<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backimg"
    tools:context="com.techease.registryblocks.Activities.Fragments.LoginFragment">

    <ImageView
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/shinelogo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="116dp"
        android:text="@string/app_name"
        android:textColor="@color/colorDim"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="159dp"
        android:gravity="center"
        android:text="@string/loginText"
        android:textColor="@color/colorDim" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@color/colorDark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0sp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:text="E-mail"
                android:layout_marginLeft="20sp"
                android:textSize="17sp"
                android:textColor="#fff" />
            <EditText
                android:id="@+id/etEmailIn"
                android:layout_width="0sp"
                android:layout_weight="0.7"
                android:layout_height="40sp"
                android:textCursorDrawable="@color/colorBlue"
                android:hint="Required"
                android:inputType="textEmailAddress"
                android:textColor="#BDBDBD"
                android:background="@null"
                android:textColorHint="@color/colorDark"
                android:paddingLeft="20sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/colorDark"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0sp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:text="Password"
                android:layout_marginLeft="20sp"
                android:textSize="17sp"
                android:textColor="#fff" />
            <EditText
                android:id="@+id/etPassIn"
                android:layout_width="0sp"
                android:layout_weight="0.7"
                android:layout_height="40sp"
                android:hint="Required"
                android:textCursorDrawable="@color/colorBlue"
                android:inputType="textPassword"
                android:textColor="#BDBDBD"
                android:background="@null"
                android:textColorHint="@color/colorDark"
                android:paddingLeft="20sp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/colorDark"/>
        <TextView
            android:id="@+id/tvForgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot it?"
            android:textColor="@color/colorBlue"
            android:textSize="17sp"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"/>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="25sp"
            android:background="@drawable/round_btn"
            android:layout_marginTop="20sp"
            android:text="Login"
            android:textSize="17sp"
            android:textColor="#fff" />
        <TextView
            android:id="@+id/tvNoAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New User? SIGNUP"
            android:textColor="@color/colorBlue"
            android:textSize="17sp"
            android:layout_marginBottom="45sp"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"/>
    </LinearLayout>
</RelativeLayout>
