<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context="com.techease.registryblocks.Activities.Fragments.ProductDetails">

    <ImageView
        android:id="@+id/ivImageProductDetail"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:background="#FFF"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="65sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="0.7"
                    android:layout_height="wrap_content"
                    android:text="Sell on Marketplace"
                    android:textColor="@color/colorBlue"
                    android:textSize="17sp"
                    />
                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content"
                    android:text="Transfer ID"
                    android:textSize="17sp"
                    android:textColor="@color/colorBlue"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Specifications"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_marginTop="10sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tvProductName"
                    android:layout_width="0sp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Speaker"
                    android:textColor="@color/colorDark"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Brand"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tvProductBrand"
                    android:layout_width="0sp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="JBL"
                    android:textColor="@color/colorDark"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Model Number"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tvModelNo"
                    android:layout_width="0sp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="JBLDHLHA"
                    android:textColor="@color/colorDark"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Serial No"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tvSerialNo"
                    android:layout_width="0sp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="JSL23HU234"
                    android:textColor="@color/colorDark"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Color"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tvColor"
                    android:layout_width="0sp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Black"
                    android:textColor="@color/colorDark"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Watts"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tvWatts"
                    android:layout_width="0sp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="16"
                    android:textColor="@color/colorDark"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Battery Capacity"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tvBattery"
                    android:layout_width="0sp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="3000mAH"
                    android:textColor="@color/colorDark"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Size"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tvSize"
                    android:layout_width="0sp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textColor="@color/colorDark"
                    android:textSize="15sp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"
                android:textColor="#fff"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Registration Date"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tvRegDate"
                    android:layout_width="0sp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="10-23-2018"
                    android:textColor="@color/colorDark"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Last Transferred"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tvLastTrans"
                    android:layout_width="0sp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Never, first owner"
                    android:textColor="@color/colorDark"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="Innsurance Clamied"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tvInsurance"
                    android:layout_width="0sp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:textColor="@color/colorDark"
                    android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
